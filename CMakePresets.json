{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "/Users/mindaewon/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE",
                "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
                "CMAKE_CXX_FLAGS": "-stdlib=libc++ -isysroot /Library/Developer/CommandLineTools/SDKs/MacOSX.sdk"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            }
        },
            {
                "name": "windows-default",
                "displayName": "Windows Default Config",
                "description": "Default build for Windows using vcpkg",
                "generator": "Ninja",
                "binaryDir": "${sourceDir}/build-windows",
                "cacheVariables": {
                    "CMAKE_BUILD_TYPE": "Debug",
                    "CMAKE_TOOLCHAIN_FILE": "${env.VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE",
                    "CMAKE_C_COMPILER": "cl",
                    "CMAKE_CXX_COMPILER": "cl",
                    "CMAKE_CXX_FLAGS": ""
                },
                "environment": {
                    "VCPKG_TARGET_TRIPLET": "x64-windows"
                }
            },
        {
            "name": "release",
            "displayName": "Release Config", 
            "description": "Release build using vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "/Users/mindaewon/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE",
                "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
                "CMAKE_CXX_FLAGS": "-stdlib=libc++ -isysroot /Library/Developer/CommandLineTools/SDKs/MacOSX.sdk"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
            {
                "name": "windows-default",
                "configurePreset": "windows-default"
            },
        {
            "name": "release", 
            "configurePreset": "release"
        }
    ]
}