          "VCPKG_TARGET_TRIPLET": "x64-linux",
          "VULKAN_SDK": "$env{HOME}/1.3.296.0/x86_64",
          "PATH": "/home/damin/vcpkg/downloads/tools/ninja/1.13.1-linux:$penv{PATH}",
          "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu:$penv{LD_LIBRARY_PATH}"
